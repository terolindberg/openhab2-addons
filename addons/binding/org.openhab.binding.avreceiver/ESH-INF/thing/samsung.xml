<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="avreceiver"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Sample Thing Type -->
    <thing-type id="samsung">
        <label>Samsung TV / BluRay / Settop box</label>
        <description>Binding for Samsung media gadgets</description>


        <channels>
        
            <channel id="power" typeId="power"> 
                <label>Power</label>
                <properties>
                    <property name="value">PW{}</property>
                    <property name="ON">ON</property>
                    <property name="OFF">STANDBY</property>
                </properties>            
            </channel>   
            <channel id="volume" typeId="volume" />
            <channel id="mute" typeId="mute" />
            <channel id="brightness" typeId="brightness" />
            <channel id="contrast" typeId="contrast" />
            <channel id="sharpness" typeId="sharpness" />
            <channel id="colorTemperature" typeId="colortemperature" />
            <channel id="sourceName" typeId="sourcename" />
            <channel id="sourceId" typeId="sourceid" />
            <channel id="channel" typeId="channel" />
            <channel id="programTitle" typeId="programtitle" />
            <channel id="channelName" typeId="channelname" />
            <channel id="url" typeId="url" />
            <channel id="stopBrowser" typeId="stopbrowser" />
            <channel id="keyCode" typeId="keycode" />
        </channels>
        
        <config-description>
            <parameter name="hostname" type="text" required="true">
                <label>Hostname or IP</label>
                <description>Hostname or IP of Samsung Device</description>
             </parameter>

            <parameter name="socket_port" type="integer" required="true">
                <label>Port</label>
                <description>The port </description>
                <default>55000</default>
            </parameter>

        </config-description>
    </thing-type>

    <!-- Sample Channel Type -->
    <channel-type id="sample-channel">
        <item-type>avreceiverItem</item-type>
        <label>AVReceiver Binding Channel</label>
        <description>Sample channel for AVReceiver Binding</description>
    </channel-type>

</thing:thing-descriptions>
